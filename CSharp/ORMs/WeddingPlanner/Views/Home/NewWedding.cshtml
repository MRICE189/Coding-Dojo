@model Wedding

<div class="m-3 d-flex justify-content-between">
    <div>
        <h1>Welcome, @Context.Session.GetString("Username")</h1>
    </div>
    <div class="d-flex justify-content-center">
        <a href="/weddings" class="btn btn-link">Home</a>
        <p class="btn">&nbsp| Plan a Wedding |&nbsp</p>
        <form asp-action="Logout" asp-controller="Home" method="post">
            <input type="submit" value="Logout" class="btn btn-link">
        </form>
    </div>
</div>

<h2 class="m-5">Plan a Wedding!</h2>
<div class="col-6">

<form asp-action="CreateWedding" asp-controller="Home" method="post">
    <span asp-validation-for="WedderOne"></span>
    <div class="mb-3 gap-3 d-flex justify-content-between">
        <label asp-for="WedderOne"></label>
        <input asp-for="WedderOne" class="form-control"/>
    </div>
    <span asp-validation-for="WedderTwo"></span>
    <div class="mb-3 gap-3 d-flex justify-content-between">
        <label asp-for="WedderTwo"></label>
        <input asp-for="WedderTwo" class="form-control"/>
    </div>
    <span asp-validation-for="DateOfWedding"></span>
    <div class="mb-3 gap-3 d-flex justify-content-between">
        <label asp-for="DateOfWedding"></label>
        <input asp-for="DateOfWedding" class="form-control"/>
    </div>
    <span asp-validation-for="Address"></span>
    <div class="mb-3 gap-3 d-flex justify-content-between">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control"/>
    </div>
    <input type="submit" value="Create" class="btn btn-success"/>
</form>
</div>