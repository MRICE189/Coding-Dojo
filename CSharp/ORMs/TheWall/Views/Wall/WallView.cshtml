@{
    ViewData["Title"] = "The Wall";
}
@model MyViewModel

<div class="d-flex justify-content-between align-items-center m-4">
    <h1>Coding Dojo Wall</h1>
    <div class="d-flex gap-3">
        <h2>Welcome, @Context.Session.GetString("Username")</h2>
        <form asp-action="Logout" asp-controller="User" method="post">
            <input type="submit" value="Logout" class="btn btn-danger">
        </form>
    </div>
</div>

@await Html.PartialAsync("_PostMessage", Model.Message)
<div class="mt-5">
@await Html.PartialAsync("_AllMessages", Model)
</div>